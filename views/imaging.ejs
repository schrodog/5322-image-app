<script src="./js/imaging/Base_Shape.js"></script>
<script src="./js/imaging/Custom_Image.js"></script>
<script src="./js/imaging/Text.js"></script>
<script src="./js/imaging/Paint.js"></script>
<script src="./js/imaging/imaging_index.js"></script>
<script src="./js/imaging/imaging_logic.js"></script>

</html>